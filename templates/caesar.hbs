</head>

<body>
    {{!-- Navbar --}}
    <nav class="navbar navbar-expand-lg bg-body-tertiary p-4">
        <div class="container-fluid">
            <a class="navbar-brand active" href="#">Cipher App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Select Type of Cipher
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/atbash">Atbash Cipher</a></li>
                            <li><a class="dropdown-item" href="/caesar">Caesar Cipher</a></li>
                            <li><a class="dropdown-item" href="/vigenere">Vigenere Cipher</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {{!-- End of Navbar --}}
    <main>
        <div class="container mt-5">
            <h1>Caesar Cipher</h1>
            <div class="row">
                <div class="col-6">
                    <div>
                        <label for="textarea1">Enter your text here:</label>
                    </div>
                    <textarea name="textarea1" class="textarea" id="textarea1"></textarea>
                    <label for="shift">Shift: </label>
                    <input type="text" class="shift" id="shift" name="shift">
                    <button class="btn btn-primary" type="button" id="encryptBtn"
                        onclick="caesar('encrypt')">Encrypt</button>
                    <button class="btn btn-secondary" type="button" id="decryptBtn"
                        onclick="caesar('decrypt')">Decrypt</button>
                </div>
                <div class="col-6">
                    <div>
                        <label for="textarea2">Result:</label>
                    </div>
                    <textarea name="textarea2" class="textarea" id="textarea2"></textarea>
                </div>
            </div>
        </div>

        <script>
            function caesar(action) {
                const textarea1 = document.getElementById('textarea1');
                const textarea2 = document.getElementById('textarea2');
                const inputText = textarea1.value;
                const shiftValue = parseInt(document.getElementById('shift').value);

                if (isNaN(shiftValue)) {
                    alert('Shift value must be a number.');
                    return;
                }

                let resultText = '';

                for (let i = 0; i < inputText.length; i++) {
                    const char = inputText[i];

                    if (/[a-zA-Z]/.test(char)) {
                        const isLowerCase = char === char.toLowerCase();
                        const startCode = isLowerCase ? 'a'.charCodeAt(0) : 'A'.charCodeAt(0);

                        // Perform encryption or decryption based on the action parameter
                        let shiftedCharCode;
                        if (action === 'encrypt') {
                            shiftedCharCode = startCode + ((char.charCodeAt(0) - startCode + shiftValue) % 26);
                        } else {
                            shiftedCharCode = startCode + ((char.charCodeAt(0) - startCode - shiftValue + 26) % 26);
                        }

                        resultText += String.fromCharCode(shiftedCharCode);
                    } else {
                        resultText += char;
                    }
                }

                textarea2.value = resultText;
            }
        </script>
    </main>

    <!-- Javascript -->
    <script src="/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
